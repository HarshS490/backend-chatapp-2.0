{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["ES2023"],
      "target": "ES2022",
      "module": "Node16",
      "strict": true,
      "moduleResolution": "Node16",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }